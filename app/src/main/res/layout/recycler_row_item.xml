<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/myCardView"
    app:cardElevation="3dp"
    android:layout_margin="4dp"
    app:cardUseCompatPadding="true"

    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name : Yogesh Sharma"
                android:textSize="20sp"
                android:maxLines="1"
                android:id="@+id/tvname"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:maxLines="1"
                android:id="@+id/tvemail"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enroll"
                android:textSize="20sp"
                android:maxLines="1"
                android:id="@+id/tvenroll"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvmobile"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvaddress"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D.O.B"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvdob"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/gender"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvyear"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvbranch"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SSC Marks"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvssc"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HSC Marks"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvhsc"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diploma Marks"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvdiploma"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F.E. Marks"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvfe"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S.E. Marks"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvse"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T.E. Marks"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvte"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B.E. Marks"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvbe"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Backlog"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvlive"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dead Backlog"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvdead"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hobbies :"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvhobbies"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internship:"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvinternship"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Achivement"
                android:textSize="18sp"
                android:maxLines="1"
                android:id="@+id/tvachieve"
                android:visibility="gone"
                />

        </LinearLayout>

</android.support.v7.widget.CardView>